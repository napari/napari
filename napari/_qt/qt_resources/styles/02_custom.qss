   max-width: 22px;
}

#QtColorPopup{
  background-color: transparent;
}

#CustomColorDialog QPushButton {
  padding: 4px 10px;
}

#CustomColorDialog QLabel {
  background-color: {{ background }};
  color: {{ secondary }};
}


/* editable slice label and axis name */
QtDimSliderWidget > QLineEdit {
  padding: 0 0 1px 2px;
