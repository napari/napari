QtModeRadioButton {
  min-height : 28px;
  padding: 0px;
}

QtModeRadioButton::indicator {
  border-radius: 3px;
  width: 28px;
  height: 28px;
  padding: 0;
}

QtModeRadioButton::indicator:checked {
  height: 28px;
  width: 28px;
  padding: 0;
}

QtModeRadioButton::indicator:disabled {
