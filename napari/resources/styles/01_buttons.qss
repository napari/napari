
/* ----------------- Buttons -------------------- */

QtDeleteButton {
   image: url(":/icons/{{ folder }}/delete.svg");
   min-width : 28px;
   max-width : 28px;
   min-height : 28px;
   max-height : 28px;
   padding: 0px;
}

