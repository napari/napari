+class InteractionBox(Compound):
+    # vertices are generated according to the following scheme:
+    # (y is actually upside down in the canvas)
+    #      8
+    #      |
+    #  0---4---2    1 = position
+    #  |       |
+    #  5   9   6
+    #  |       |
+    #  1---7---3
+    _edges = np.array(
+        [
+            [0, 1],
+            [1, 3],
+            [3, 2],
+            [2, 0],
+            [4, 8],
+        ]
+    )
+
+    def __init__(self, *args, **kwargs):
